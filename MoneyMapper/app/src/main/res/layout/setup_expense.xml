<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:text="Name:"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:text="Amount:"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvRegularity"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textSize="25sp"
            android:text="Regularity:"
            android:textAlignment="textEnd"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:text="Priority:"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/dispenseDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:text="Dispense Date" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/LL1"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1">

        <EditText
            android:id="@+id/expenseName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/expenseAmount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/regularitySpinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/prioritySpinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dateHolder"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/finishedExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>