<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mrclean.moneymapper.Accounts.AddAccountActivity"
    tools:showIn="@layout/activity_trans_collection">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="31dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="0.46"
                    android:text="Account
            Name"
                    android:textSize="17dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="42dp" />

                <TextView
                    android:id="@+id/addAccountAmount"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_below="@+id/submitTrans"
                    android:layout_toEndOf="@+id/addAccountDate"
                    android:layout_weight="0.62"
                    android:text="Amount"
                    android:textSize="25dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="111dp" />

                <TextView
                    android:id="@+id/addAccountDate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/addAccountType"
                    android:layout_below="@+id/transName"
                    android:layout_weight="0.81"
                    android:text="Date"
                    android:textSize="25dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="173dp" />

                <TextView
                    android:id="@+id/addAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/transName"
                    android:layout_weight="0.76"
                    android:text="Type"
                    android:textSize="25dp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="209dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="26dp">

                <EditText
                    android:id="@+id/EditAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Account Name"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="27dp" />

                <EditText
                    android:id="@+id/EditAccountAmount"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Amount"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="106dp" />

                <EditText
                    android:id="@+id/editAccountDate"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Date"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="177dp" />

                <EditText
                    android:id="@+id/EditAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Type"
                    tools:layout_editor_absoluteX="136dp"
                    tools:layout_editor_absoluteY="266dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submitTrans"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/transName"
            android:layout_below="@+id/addAccountDate"
            android:onClick="submitClickHandler"
            android:text="Add"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="407dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
